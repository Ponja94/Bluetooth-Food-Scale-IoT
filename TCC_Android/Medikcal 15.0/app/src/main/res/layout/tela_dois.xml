<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddNovoAlimento">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bgmedikcal"
        android:gravity="center"

        >

        <TextView
            android:id="@+id/textLogo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:text="Medi"
            android:textAppearance="@android:style/TextAppearance.WindowTitle"
            android:textColor="#22c37E"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/textLogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:text="kcal"
            android:textAppearance="@android:style/TextAppearance.WindowTitle"
            android:textColor="#FFA500"
            android:textSize="26sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adocionarNovoAlimento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Adicionar Novo Alimento..."
                android:textAllCaps="false"
                android:textColor="#113C44"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/nomepesoPorcao"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Peso"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="#22c37E"
                    android:textColorHighlight="#b5b2fac4"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="30sp" />


                <TextView
                    android:id="@+id/textoNormalPesoAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:paddingTop="30dp"
                    android:text="g (Porção)"
                    android:textColor="#113C44"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="16sp" />




            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/nomenomeAlimento"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:hint="Nome do Alimento"
                    android:imeOptions="actionNext"
                    android:inputType="text|textAutoCorrect|textAutoComplete"
                    android:maxLength="30"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textColor="#22c37E"
                    android:textColorHighlight="#b5b2fac4"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="21sp"
                    android:textStyle="bold" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/nomequantKcal"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="kcal"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="#22c37E"
                    android:textColorHighlight="#b5b2fac4"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/textoNormalKcalAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="kcal/por porção"
                    android:textColor="#113C44"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/nomequantProt"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Prot"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="#22c37E"
                    android:textColorHighlight="#b5b2fac4"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="20sp" />



                <TextView
                    android:id="@+id/textoNormalProtAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Prot/por porção"
                    android:textColor="#113C44"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/nomequantCarb"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Carb"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="#22c37E"
                    android:textColorHighlight="#b5b2fac4"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textoNormalCarbAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Carb/por porção"
                    android:textColor="#113C44"
                    android:textSize="12sp" />


                <EditText
                    android:id="@+id/nomequantGord"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat"
                    android:hint="Gord"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="#22c37E"
                    android:textColorHighlight="#b5b2fac4"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textoNormalGordAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="1dp"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="Gord/por porção"
                    android:textColor="#113C44"
                    android:textSize="12sp" />

            </LinearLayout>


            <Button
                android:id="@+id/btnAddAlimentoBD"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bgbtn"
                android:fontFamily="@font/lato_black"
                android:paddingBottom="5dp"
                android:text="Add Novo Alimento"
                android:textColor="#FFF"
                android:textSize="19sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
